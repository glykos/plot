/usr/i686-apple-darwin9/bin/i686-apple-darwin9-gcc -DGRA -D_FILE_OFFSET_BITS=64 -I/usr/i686-apple-darwin9/lib/gcc/i686-apple-darwin9/4.0.1/include -IYgl-4.2_MachO_i686  -L/usr/i686-apple-darwin9/usr/X11R6/lib -LYgl-4.2_MachO_i686 plot.c -lYgl -lXext -lX11 -llapack -lblas -lm

